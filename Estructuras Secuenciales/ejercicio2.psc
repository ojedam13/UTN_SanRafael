Proceso Circunferencia
	Definir radio,area,Long Como Real;
	Escribir 'Escribe el valor de radio:';
	Leer radio;
	// Ecuacion de area y longitud
	area <- pi*radio^2;
	Long <- 2*pi*radio;
	Escribir 'El area de la circunsferencia es:',redon(area);
	Escribir 'La longitud de la circunsferencia es: ',redon(Long);
FinProceso
